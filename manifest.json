{
  "manifest_version": 3,
  "name": "Plex Sleep Timer",
  "version": "1.2",
  "description": "Set a sleep timer while watching videos on Plex. Now with presets, mute mode, and dim screen options.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.plex.tv/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_v2.png",
      "48": "icons/icon48_v2.png",
      "128": "icons/icon128_v2.png"
    }
  },
  "icons": {
    "16": "icons/icon16_v2.png",
    "48": "icons/icon48_v2.png",
    "128": "icons/icon128_v2.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.plex.tv/*"
      ],
      "js": [
        "content.js",
		"skipper.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
